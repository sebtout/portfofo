{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="text-center container">
		<div class="form-signin m-auto bg-danger pt-5 pb-5 rounded col-lg-6 mt-5">
			<form action="{{ path('app_login') }}" method="post" class="col-sm-12">
				<h1 class="h3 mb-3 fw-normal">Please sign in</h1>
				<div class="mt-3">
					<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="monEmail@email.com" class="col-sm-8">
				</div>
				<div class="mt-3">
					<input type="password" id="password" name="_password" placeholder="Votre mot de passe" class="col-sm-8">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				</div>
				<div class="checkbox mb-3">
					<label class="mt-3">
						<input type="checkbox" value="remember-me">
						Remember me
					</label>
				</div>
				<button class="btn btn-lg btn-primary" type="submit">Sign in</button>

				<button class="btn btn-lg btn-primary">
					<a href="{{ path('app_register') }}" class="text-white">Sign up</a>
				</button>

			</form>
		</div>
	</div>
{% endblock %}
