<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
		{# <link rel="icon" type="image/png" href="{{ asset('/build/images/salesforce.png') }}"/> #}
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Eighth navbar example">
		<div class="container">
			<a class="navbar-brand" href="{{ path('app_acceuil') }}">MyFolio</a>
			<button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="navbar-collapse collapse" id="navbarsExample07" style="">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="{{ path('app_acceuil') }}">Acceuil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_cv') }}">CV</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_portfolio') }}">Portfolio</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_register') }}">S'enregistrer</a>
					</li>
				</ul>
				{% if app.user %}
					{{ app.user.mail }}
					<a href="{{ path('app_logout') }}">
						Se déconnecter</a>
				{% else %}
					<a href="{{ path('app_login') }}">
						Se connecter</a>
				{% endif %}
			</div>
		</div>
	</nav>
	<body>
		{% block body %}{% endblock %}
		<div class="">
			{% include "_footer.html.twig" %}
		</div>
	</body>
</html>
